{
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"plugins": [
			"@nestjs/swagger/plugin",
			{
				"name": "@nestjs/graphql",
				"options": {
					"typeFileNameSuffix": [
						".schema.ts",
						".resolver.ts",
						".service.ts"
					],
					"introspectComments": true
				}
			}
		]
	}
}
